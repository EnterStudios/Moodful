extends layout

block content
 include nav
 .container
  .banner
   h1 #{user.firstName}'s Mood Dashboard

  .dashboard-container
   .dashboard-item-container
    .dashboard-item-bar Monthly Moodcloud
    .moodcloud
      p Word cloud of moods
   .dashboard-item-container
    .dashboard-item-bar Weekly Moods
    .piechart
      //- p #{data} test
   .dashboard-item-container
    .dashboard-item-bar Last Entry
    .entry-data
      - for (var i=0; i<user.entries.length; i++) {
       - if (i === user.entries.length - 1) {
        span.lastmood
         .icon-log 
          img(src='img/moods/#{user.entries[i].mood}.svg', alt="#{user.entries[i].mood} face")
          span #{user.entries[i].mood}
        - for (var j=0; j<user.entries.length; j++)
          span.lastact #{user.entries[i].activity[j]}
        span.lastjourn #{user.entries[i].journal}
       - }
      - }
